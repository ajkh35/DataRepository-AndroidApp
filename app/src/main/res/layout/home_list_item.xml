<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/home_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/home_card_title"
            android:text="@string/placeholder_text"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_20"/>

        <TextView
            android:id="@+id/home_card_credits"
            android:text="@string/placeholder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:layout_below="@id/home_card_title"/>

        <TextView
            android:id="@+id/home_card_release"
            android:text="@string/placeholder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/home_card_credits"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/home_card_youtube"
            android:text="@string/youtube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:layout_below="@id/home_card_release"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>