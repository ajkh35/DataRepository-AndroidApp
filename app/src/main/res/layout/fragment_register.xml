<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.repositoryworks.datarepository.fragments.RegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/register_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="0.35"
            android:orientation="vertical"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/add_image"
                android:layout_width="@dimen/dp_140"
                android:layout_height="@dimen/dp_140"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_minus_5"
                android:src="@drawable/ic_account_circle_48pt_3x" />

            <TextView
                android:text="@string/click_to_edit"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/first_name_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="0.05"
            android:labelFor="@+id/first_name"
            android:text="@string/first_name_label"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_18" />

        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="0.07"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/first_name"
            android:inputType="text"
            android:padding="@dimen/dp_5" />

        <TextView
            android:id="@+id/last_name_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="0.05"
            android:labelFor="@+id/last_name"
            android:text="@string/last_name_label"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_18" />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="0.07"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/last_name"
            android:inputType="text"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/user_name_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="0.05"
            android:labelFor="@+id/user_name"
            android:text="@string/user_name_label"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_18" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="0.07"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/user_name"
            android:inputType="text"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="0.05"
            android:labelFor="@+id/email"
            android:text="@string/email_label"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_18" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="0.07"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/dp_5" />

        <TextView
            android:id="@+id/password_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="0.05"
            android:text="@string/pass_label"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_18" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="0.07"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:padding="@dimen/dp_5" />

        <Button
            android:id="@+id/signup"
            android:text="@string/signup"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="0.1"/>

    </LinearLayout>

</LinearLayout>